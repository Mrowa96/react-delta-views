{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": false,
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "resolveJsonModule": true,
    "experimentalDecorators": false,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["./node_modules", "./dist", "./coverage", "./public"]
}
